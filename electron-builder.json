{
  "appId": "com.notecode.app",
  "productName": "NoteCode",
  "copyright": "Copyright Â© 2026 NoteCode Team",
  "directories": {
    "output": "release",
    "buildResources": "electron/build"
  },
  "files": [
    "electron/dist/**/*",
    "backend/dist/**/*",
    "backend/package.json",
    "backend/node_modules/**/*",
    "frontend/dist/**/*"
  ],
  "extraResources": [
    {
      "from": "backend/dist",
      "to": "backend/dist"
    },
    {
      "from": "backend/package.json",
      "to": "backend/package.json"
    },
    {
      "from": "backend/node_modules",
      "to": "backend/node_modules"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/build/icon.ico",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "NoteCode"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/build/icon.icns",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/build/entitlements.mac.plist",
    "entitlementsInherit": "electron/build/entitlements.mac.plist",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "icon": "electron/build/icon.icns",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/build/icon.png",
    "category": "Development",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "appImage": {
    "license": "LICENSE"
  },
  "publish": {
    "provider": "github",
    "owner": "therichardngai-code",
    "repo": "notecode",
    "releaseType": "release"
  },
  "compression": "maximum",
  "asar": true,
  "asarUnpack": [
    "backend/node_modules/**/*"
  ]
}
